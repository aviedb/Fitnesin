<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:fitsSystemWindows="true"
        android:paddingHorizontal="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/google_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:text="Instructor Info"
                android:textColor="#424242"
                android:textSize="25sp" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/elon_musk"
                    android:elevation="5dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/instructor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAME HERE"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#424242"
                    android:fontFamily="@font/google_sans"
                    android:layout_gravity="center"/>

                <TextView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHONE HERE"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/google_sans"
                    android:textSize="20sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/google_sans"
                    android:text="Contact Info"
                    android:textColor="#424242"
                    android:textSize="24sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:text="Location"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans"
                        android:textColor="#424242"
                        android:textSize="16dp"
                        android:layout_marginStart="120dp"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:gravity="end"
                        android:clickable="true"
                        android:layout_gravity="end"
                        android:text="LOCATION HERE"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:text="Birthdate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans"
                        android:textColor="#424242"
                        android:textSize="16dp"
                        android:layout_marginStart="120dp"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/ti_birthdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:gravity="end"
                        android:clickable="true"
                        android:layout_gravity="end"
                        android:text="BIRTHDATE HERE"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:text="Gender"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans"
                        android:textColor="#424242"
                        android:textSize="16dp"
                        android:layout_marginStart="120dp"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/ti_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/google_sans"
                        android:textSize="16dp"
                        android:gravity="end"
                        android:clickable="true"
                        android:layout_gravity="end"
                        android:text="GENDER HERE"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>